{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build & Run Unit7 Lecture",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/Unit7"
      },
      "command": "g++",
      "args": [
        "Lecture 12-9-2025.cpp",
        "-o",
        "Lecture 12-9-2025.exe"
      ],
      "problemMatcher": ["$gcc"],
      "group": "build"
    },
    {
      "label": "Run Unit7 Lecture",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/Unit7"
      },
      "command": ".\\Lecture 12-9-2025.exe"
    },
    {
      "label": "Build then Run Unit7 Lecture",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/Unit7"
      },
      "command": "pwsh",
      "args": [
        "-NoProfile",
        "-Command",
        "g++ \"Lecture 12-9-2025.cpp\" -o \"Lecture 12-9-2025.exe\" ; if ($?) { .\\\"Lecture 12-9-2025.exe\" }"
      ],
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}